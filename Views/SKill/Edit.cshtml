@model TaskTrackingApp.Models.SkillDto
@{
    ViewBag.Title = "Edit";
}
<a href="/Skill/Details/@Model.SkillID">Back to details</a>
<h2>Update skill</h2>
<form action="/Skill/Update/@Model.SkillID" method="POST">
    <div style="display:none;">
        @* Pass through the animal ID *@
        <input type="text" name="SkillID" value="@Model.SkillID" />
    </div>
    <div class="form-group row">
        <label for="SkillName" class="col-sm-2">Skill name:</label>
        <div class="col-sm-10">
            <input type="text" id="SkillName" name="SkillName" class="form-control" value="@Model.SkillName" />
        </div>
    </div>
    <div>
        <input type="submit" class="btn btn-primary" value="Update Skill" />

    </div>
</form>
