@model IEnumerable<TaskTrackingApp.Models.DeveloperDto>
@{
    ViewBag.Title = "New";
}

<h2>New assignment</h2>
<form action="/Assignment/Create" method="POST">
    <div class="form-group row" >
        <label for="AssignmentDesc" class="col-sm-2">Description:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="AssignmentDesc" id="AssignmentDesc"/>
        </div>
    </div>
    <div class="form-group row" >
        <label for="Status" class="col-sm-2">Status:</label>
        <div class="col-sm-10">
            <select name="Status" id="Status" class="form-control">
                <option value="0">Open</option>
                <option value="1">InProgress</option>
                <option value="2">Resolved</option>
                <option value="3">Reopened</option>
                <option value="4">Closed</option>
            </select>
        </div>
        
    </div>
    <div class="form-group row">
        <label for="Priority" class="col-sm-2">Priority:</label>
        <div class="col-sm-10">
            <select name="Priority" id="Priority" class="form-control">
                <option value="0">Trivial</option>
                <option value="1">Minor</option>
                <option value="2">Major</option>
                <option value="3">Critical</option>
                <option value="4">Blocker</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label for="DevID" class="col-sm-2">Developers:</label>
        <div class="col-sm-10">
            <select name="DevID" id="DevID" class="form-control">
                <option value="0"></option>
                @foreach (var developer in Model)
                {
                    <option value="@developer.DevID">@developer.DeveloperFirstName @developer.DeveloperLastName (@developer.DeveloperPosition)</option>
                }
            </select>
        </div>
    </div>
    <div>
        <input type="submit" class="btn btn-primary" value="Add Assignment" />
    </div>
</form>
