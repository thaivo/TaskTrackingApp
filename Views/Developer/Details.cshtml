@model TaskTrackingApp.Models.ViewModels.DetailsDeveloper
@{
    ViewBag.Title = "Details";

}

<a href="/Developer/List/" class="btn btn-info">Back to the list</a>
<h2>Details of a developer</h2>

<p><strong>Name</strong>: @Model.selectedDeveloper.DeveloperFirstName @Model.selectedDeveloper.DeveloperLastName</p>

<p><strong>Position</strong>: @Model.selectedDeveloper.DeveloperPosition</p>
<div>
    <p><strong> List of skills developer has</strong>:</p>
    <div style="border:1px solid grey;background-color:gainsboro; margin-bottom:8px;">
        @foreach (var skill in Model.skillsDeveloperHas)
        {
            <a href="/Skill/Details/@skill.SkillID">@skill.SkillName</a><a href="/Developer/Remove/@Model.selectedDeveloper.DevID?SkillID=@skill.SkillID" class="text-danger">[x]</a>
        }
    </div>
    <div>
        <form method="post" action="/Developer/Add/@Model.selectedDeveloper.DevID" class="form-group row">
            <!--<div class="form-group row">-->
            <label for="SkillID" class="col-sm-3"><strong>List of skills developer does not have</strong>:</label>
            <!--<div class="col-sm-3">-->
            <select id="SkillID" name="SkillID" class="form-control col-sm-3" >
                @foreach (var skill in Model.skillsDeveloperDoesNotHave)
                {
                    <option value="@skill.SkillID">@skill.SkillName</option>
                }

            </select>
            <!--</div>-->
            <input type="submit" class="btn btn-primary" value="Add Skill" />
            <!--</div>-->
        </form>
    </div>
</div>
<p><strong>Assigned tasks</strong>:</p>
<div class="container">
    <div class="row table-bordered">
        <div class="col-md-2">#</div>
        <div class="col-md-2">Task description</div>
        <div class="col-md-2">Priority</div>
        <div class="col-md-2">Status</div>
    </div>
    @{
        foreach (var task in Model.assignedTasks)
        {
            <div class="row table-bordered">
                <div class="col-md-2">@task.AssignmentID</div>
                <div class="col-md-2">@task.AssignmentDesc</div>
                <div class="col-md-2">@task.getPriority()</div>
                <div class="col-md-2">@task.getStatus()</div>
            </div>
        }
    }
</div>

<a href="/Developer/Edit/@Model.selectedDeveloper.DevID" class="btn btn-warning">Update</a>
<a href="/Developer/DeleteConfirm/@Model.selectedDeveloper.DevID" class="btn btn-danger">Delete</a>

